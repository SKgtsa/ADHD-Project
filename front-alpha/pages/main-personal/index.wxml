<!--pages/main-personal/index.wxml-->

<view class="container">
    <view class="userinfo">
        <!--用户头像-->
        <view>
            <image
                    bindtap="bindViewTap"
                    class="userinfo-avatar"
                    src="{{userInfo.avatarUrl}}"
                    mode="cover"
            />
        </view>
        <!--用户名-->
        <view>
            <text class="userinfo-nickname">{{userInfo.nickName}}</text>
        </view>  
    </view>
</view>
