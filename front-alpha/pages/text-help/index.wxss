/* pages/text-help/index.wxss */
.page{
  background-color: #6FA3FC;
  color: #FFF;
  height: 100vh;
  font-size: 2.7vh;
  line-height: 4vh;
  font-weight: 500;
}
.wrapper{
  padding-left: 4vw;
  padding-bottom: 3vh;
}
.container{
  height: 41vh;
  width: 90vw;
  padding: 3vw;
  border-radius: 5vw;
  background-color: #FFF;
  position: relative;
  color: black;
}
.lineChart{
  padding: 0;
  margin: 0;
  height: 36vh;
  width: 78vw;
  padding-right: 4vw;
  padding-left: 4vw;
}
.bottomCard{
  width: 100vw;
  height: 52vh;
  background-color: #FFF;
  border-top-left-radius: 2vh;
  border-top-right-radius: 2vh;
}
.suggesttionBubble{
  width: 92%;
  height: 20vh;
  background-color: #007af2;
  margin: auto;
  border-radius: 2.5vh 2.5vh 0 2.5vh;
  display: flex;
  flex-direction: column;
  padding: 1vh;
}
.changeMapButton{
  width: 90%;
  height: 10vh;
  border-style: none;
  margin: auto;
  background-color: #007af2;
  color: #FFF;
  border-radius: 2vh;
  font-size: 3.5vh;
}
.status{
  font-size: 4vh;
  font-weight: bold;
}
.comment{
  font-size: 3vh;
}