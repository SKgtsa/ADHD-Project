/* pages/main-device/index.wxss */
.welcome{
  width: 100vw;
  height: 6vh;
  border-radius: 6vw;
  margin: auto;
  display: flex;
  flex-direction: row;
  color: #FFF;
}
.welcomeNote{
  font-size: 4vh;
  padding-top: 2vh;
  width: 47.5vw;
}
.userName{
  font-size: 3.7vh;
  text-align: right;
  padding-right: 5vw;
  padding-top: 1vh;
  width: 47.5vw;
}
.mainContainer{
    text-align: center;
    background-color: #6FA3FC;
    height: 100vh;
}
.titleContainer{
  width: 100vw;
  color: #007af2;
  height: 5vh;
  border-radius: 6vw;
  padding-top: 1.5vh;
  padding-bottom: 0.5vh;
  background-color: #fff;
  border-top-left-radius: 0;
  border-top-right-radius: 0;
}
.title{
  font-size: 3.5vh;
  text-align: left;
  z-index: 1;
  font-weight: 500;
  width: 100vw;

}
.container{
  height: 69vh;
  width: 100vw;
  margin: auto,0;
  padding-top: 9vh;
  border-radius: 5vw;
}
.lineChart{
  padding: 0;
  margin: 0;
  height: 34vh;
  width: 76vw;
  background-color: #fff;
  border-radius: 5vw;
  padding-right: 3vw;
  padding-left: 3vw;
  box-shadow: 10px 10px 10px 5px rgba(40, 29, 167, 0.4);  
}
.buttonArea{
  display: flex;
  flex-direction: column;
  padding-bottom: 5vh;
  padding-top: 3vh;
}
.buttonWrapper{
  height: 12vh;
}
.button{
  margin: auto;
  width: 90vw;
  height: 10vh;
  border-radius: 4vw;
  border-style: none;
  background-color: #FFF;
  color: #707070;
  font-size: 4vh;
  font-weight: bolder;
}
.mask{
  z-index: 1;
  height: 100vh;
  background-color: rgba(60, 60, 60, 0.7);
}
.popOutWindow{
  z-index: 2;
  background-color: #100964;
  background-size: 40vw;
  height: 50vh;
  position: absolute;
  bottom: 0;
}
.BlueToothLetter{
    color: #FFF;
    font-size: 3vh;
    background-color: rgba(60, 60, 60, 0.8);
    padding: 15px;
    border-radius: 3vw;
    display: flex;
    flex-direction: column;
    width: 50vw;

}
.pattern{
  background-image:url('https://chenanbella.cn/static/BlueTooth.gif'); 
  padding-top: 15vh; 
  width: 100vw;
  height: 70vh;
  background-position: center;
  background-size: 30vw;
  z-index: 999;
  padding-left: 21vw;
}
.guideButton{
  width: 90vw;
  height: 28vh;
  background-color: #FFF;
  color: #707070;
  border-radius: 5vw;
  border-style: none;
  margin: auto;
  display: flex;
  flex-direction: column;
}
.guideTop{
  font-size: 4vh;
  font-weight: 600;
  line-height: 3vh;
}
.guideBottom{
  font-size: 2vh;
}
.guideText{
  display: flex;
  flex-direction: column;
  margin: auto;
}
