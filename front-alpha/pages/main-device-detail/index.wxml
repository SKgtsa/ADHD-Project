<!--pages/main-device-detail/index.wxml-->
<view class="container">
  <view class="modeSwitch">
    <button class="inTime" 
    style="{{expired ? 'background-color: #fff;border-top: none;border-left: none;border-right: none;border-bottom-width: 1vw' : 'background-color: #e2f0fe;border-top-width: 1vw;border-left-width: 1vw;border-right-width: 1vw;border-bottom-width: 0'}}"
    bind:tap="inTime">及时同步</button>
    <button class="expired" 
    style="{{expired ? 'background-color: #e2f0fe;border-top-width: 1vw;border-left-width: 1vw;border-right-width: 1vw;border-bottom: 0' : 'background-color: #fff;border-top: none;border-left: none;border-right: none;border-bottom-width: 1vw'}}"
    bind:tap="expired">过期数据</button>
  </view>
  <view class="buttonList">
    <block wx:for="{{list}}" wx:for-index="index" wx:key="id">
      <button class="infoButton" bind:tap="jump" data-target="{{index}}">
        <view class="buttonLeft">
          <text class="mark">第<text style="color:#007af2; font-weight: bolder;">{{item.mark}}</text>次训练</text>
        </view>
        <view class="buttonRight">
          <text style="text-align: right;" class="{{expired? 'hide': 'show'}}">{{item.year}}年{{item.month}}月{{item.day}}日</text>
          <text style="color: #007af2; font-weight: 800;"><text style="color: #486484; font-weight: 500;">金币数:</text>{{item.gold}}</text>
        </view>
      </button>
    </block>
    <view class="noData"  style="{{list.length > 0? 'display: none' : 'display: inline'}}">
      <text class="mark">暂无数据</text>
    </view>
  </view>
  <view class="pageManager">
    <button class="lastPage" bind:tap="lastPage">上一页</button>
    <button class="currentPage" bind:tap="currentPage">第<text style="color: #007af2; font-weight: 900;">{{pageNum}}</text>页</button>
    <button class="nextPage" bind:tap="nextPage">下一页</button>
  </view>
</view>