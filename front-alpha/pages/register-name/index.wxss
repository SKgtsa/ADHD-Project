.containerX{
  background-color: #007af2;
  display: flex;
  flex-direction: column;
  height: 100vh;
  text-align: center;
}
.upperText{
  color: #FFF;
  font-size: 8vw;
  text-align: left;
  padding-top: 3vh;
  padding-left: 3vw;
  padding-bottom: 5vh;
}
.lowerText{
  color: #FFF;
  font-size: 6vw;
  text-align: left;
  padding-top: 3vh;
  padding-left: 3vw;
  padding-bottom: 5vh;
}
.weui-input{
  height: 10vh;
  font-size: 5vh;
  background-color: #FFF;
  width: 90vw;
  margin: 0 auto;
}
.submitButton{
  background-color: #007af2;
  border-style: solid;
  border-width: 5px;
  border-color: #FFF;
  width: 80vw;
  height: 10vh;
  border-radius: 5vw;
  color: #FFF;
  font-size: 3.5vh;
}