<!--pages/main-checkIn/index.wxml-->
<view class="container">
  <view class="window">
    <view class="checkInHistory">
      <text>你已连续签到了{{checkInDays}}天</text>
    </view>
    <view class="messageArea">
      <text class="message">{{message}}</text>
    </view>
  </view>
  <button class="checkInButton" bind:tap="tapCheckInButton">{{checkInButton}}</button>
</view>